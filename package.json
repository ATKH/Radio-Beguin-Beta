{
  "name": "radio-beguin",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "refresh-token": "ts-node scripts/refresh-token.ts",
    "soundcloud:callback-server": "ts-node scripts/request-code.ts",
    "soundcloud:authorize": "ts-node --transpile-only scripts/authorize-soundcloud.ts",
    "debug:soundcloud": "node scripts/debug-soundcloud.cjs",
    "check-token": "ts-node scripts/check-token.ts",
    "update:podcasts": "ts-node -r tsconfig-paths/register scripts/update-podcasts.ts",
    "sync-podcasts": "npm run soundcloud:authorize -- --refresh-data && git add src/data/podcasts.json && git commit -m 'chore: sync podcasts data [skip ci]' || echo 'No changes to commit' && git push",
    "deploy": "vercel --prod --force",
    "deploy:preview": "vercel --force"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@types/express": "^5.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "hls.js": "^1.6.13",
    "lucide-react": "^0.544.0",
    "next": "15.5.3",
    "node-fetch": "^3.3.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-infinite-scroll-component": "^6.1.0",
    "rss-parser": "^3.13.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20.19.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5.9.2"
  }
}
